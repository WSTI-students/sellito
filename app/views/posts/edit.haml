%h2
  Edit post:
  = @post.title
= form_for @post_form, url: post_path(@post), method: :patch do |f|
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :description
    = f.text_area :description
  %p
    = f.label :category
    = f.select :category_id, Category.all.collect { |c| [ c.name, c.id ] }, include_blank: true
  %p
    = f.label :expiration_date
    = f.date_field :expiration_date
  = f.hidden_field :user_id, value: current_user.id
  %p= f.submit 'Submit'

