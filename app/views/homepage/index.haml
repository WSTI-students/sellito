.row.clearfix
  .container
    %h2.text-center What are you looking for today?
    .col-md-6.col-sm-offset-3
      %input.form-control{placeholder: 'I am searching for...', type: 'text'}
  .row.text-center
    - @categories.each do |category|
      = link_to category.name.capitalize, category
  .row.text-center
    - @featured_posts.each do |post|
      %p
        = link_to post.title, post
        Categories:
        - post.categories.each do |category|
          = category.name
